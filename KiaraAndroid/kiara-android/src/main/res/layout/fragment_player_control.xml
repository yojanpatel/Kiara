<RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     xmlns:fab="http://schemas.android.com/apk/res-auto"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     tools:context="uk.co.yojan.kiara.android.fragments.PlayerControlFragment"
     android:background="@color/grey1000">

  <View
      android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:id="@+id/divider"
      android:background="@color/pinkA200"/>

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/album_image"
      android:layout_margin="8dp"
      android:src="@drawable/ic_placeholder_150"/>

  <uk.co.yojan.kiara.android.views.IconButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@color/transparent"
      android:id="@+id/playpause"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:padding="8dp"
      android:layout_marginRight="8dp"
      fab:ib_color="@color/white"
      fab:ib_pressedRingWidth="8dp"
      fab:ib_startRingWidth="8dp"
      android:src="@drawable/ic_play_circle_outline_white_36dp"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/song_name"
      android:textColor="@color/grey200"
      android:textSize="16sp"
      android:text="Same Old Song"
      android:singleLine="true"
      android:layout_marginTop="8dp"
      android:layout_alignTop="@+id/album_image"
      android:layout_toRightOf="@+id/album_image"
      android:layout_toEndOf="@+id/album_image"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/detail"
      android:textColor="@color/grey400"
      android:textSize="14sp"
      android:singleLine="true"
      android:text="The Weeknd - Trilogy"
      android:layout_below="@+id/song_name"
      android:layout_alignLeft="@+id/song_name"
      android:layout_alignStart="@+id/song_name"/>

</RelativeLayout>
