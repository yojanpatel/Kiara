<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material">
      <!-- Main theme colors -->
      <!--  for the app bar -->
      <item name="android:colorPrimary">@color/indigo500</item>
      <!--   darker variant for the status bar and contextual app bars -->
      <item name="android:colorPrimaryDark">@color/indigo700</item>
      <!--   theme UI controls like checkboxes and text fields -->
      <item name="android:colorAccent">@color/pinkA200</item>
      <!-- primary colour for the text -->
      <item name="android:textColorPrimary">@color/grey50</item>
      <item name="android:windowBackground">@color/grey900</item>
    </style>
</resources>
