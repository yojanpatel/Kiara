<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/indigo500</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/indigo700</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/pinkA200</item>
        <!-- primary colour for the text -->
    </style>

    <style name="QueueSearchStyle" parent="Widget.AppCompat.SearchView">
        <!-- Background for the search query section (e.g. EditText) -->
        <item name="queryBackground">@color/eighth_transparent</item>
        <!-- Background for the actions section (e.g. voice, submit) -->
        <item name="submitBackground">@color/transparent</item>
        <!-- Close button icon -->
        <item name="closeIcon">@drawable/ic_close_grey600_24dp</item>
        <!-- Search button icon -->
        <item name="searchIcon">@drawable/ic_search_grey600_24dp</item>
    </style>

</resources>
